<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="DotNetAcademy.Nhibernate.PrimaryKeyStrategies.Domain"
                   assembly="DotNetAcademy.Nhibernate.PrimaryKeyStrategies">

  <class name="PostWithGuidComb" table="PostWithGuidComb">
    <id name="Id" access="field.camelcase-underscore">
      <generator class="guid.comb" />
    </id>

    <property name="Description" />
    <property name="Message" />
    <property name="PostedOn" />
  </class>
</hibernate-mapping>